<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/FFe5d6c4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/page1_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/login_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center"
                android:text="@string/diary"
                android:textColor="@color/FF16461b"
                android:textSize="@dimen/txtsize_18" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/distance_5"
                android:background="@color/FFd8d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prev_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/distance_5"
                    android:text="&lt;"
                    android:textColor="#3D6CBA"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="2023/12/15"
                    android:textColor="@color/FF16461b"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:paddingLeft="10dp"
                    android:text="&gt;"
                    android:textColor="#3D6CBA"
                    android:textSize="26sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/servingsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/distance_5"
                android:background="@drawable/text_shape"
                android:padding="@dimen/distance_10"
                android:text="@string/servingsize"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mainfood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/mainfood" />

                <ImageView
                    android:id="@+id/meat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/meat" />

                <ImageView
                    android:id="@+id/vegetables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/vegetables" />

                <ImageView
                    android:id="@+id/fruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fruit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainfood_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/mainfood"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/meat1_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/meat1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/vegetables_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/vegetables"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/fruit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/fruit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/distance_20"
                android:paddingRight="@dimen/distance_20">

                <TextView
                    android:id="@+id/Moisture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/Moisture"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username_keyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="right"
                    android:hint="@string/ml"
                    android:inputType="number"
                    android:paddingRight="@dimen/distance_15"
                    android:textSize="@dimen/txtsize_18"
                    app:layout_constraintLeft_toRightOf="@+id/otherreplenish"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_20"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/breakfast"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/breakfast_allkindsportionsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="@string/allkindsportionsize"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/breakfast_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="09:00 AM"
                    android:textSize="@dimen/txtsize_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_20"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/Lunch"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Lunch_allkindsportionsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="@string/allkindsportionsize"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/Lunch_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="01:00 PM"
                    android:textSize="@dimen/txtsize_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_20"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/dinner"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dinner_allkindsportionsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="@string/allkindsportionsize"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/dinner_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="07:00 PM"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/breakfast_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_20"
                android:layout_marginTop="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/other_eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/other_eat"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/other_eat_allkindsportionsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="@string/allkindsportionsize"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/other_eat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="04:00 PM"
                    android:minEms="7"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/other_eat_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_32"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_marginLeft="@dimen/distance_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance_5"
                    android:text="@string/sports"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/sports_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance_10"
                    android:text="@string/have"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nightsnack_yes_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_5"
                    app:srcCompat="@mipmap/circle" />

                <TextView
                    android:id="@+id/nightsnack_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance_5"
                    android:text="@string/no"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nightsnack_no_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_5"
                    app:srcCompat="@mipmap/circle" />

            </LinearLayout>

            <TextView
                android:id="@+id/remaining_portion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/distance_5"
                android:background="@drawable/text_shape"
                android:padding="@dimen/distance_10"
                android:text="@string/remaining_portion"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mainfood_Remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/mainfood" />

                <ImageView
                    android:id="@+id/meat_Remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/meat" />

                <ImageView
                    android:id="@+id/vegetables_Remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/vegetables" />

                <ImageView
                    android:id="@+id/fruit_Remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fruit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainfood_Remaining_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/mainfood"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/meat1_Remaining_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/meat1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/vegetables_Remaining_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/vegetables"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <TextView
                    android:id="@+id/fruit_Remaining_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_10"
                    android:layout_weight="1"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="@string/fruit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Dietblindspots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/Dietblindspots"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/distance_5"
                    app:srcCompat="@mipmap/search" />

            </LinearLayout>

            <EditText
                android:id="@+id/Dietblindspots_keyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_5"
                android:layout_marginTop="@dimen/distance_5"
                android:background="@drawable/keyin_shape"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:minLines="6"
                android:textSize="@dimen/txtsize_18"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
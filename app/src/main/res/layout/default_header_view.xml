<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prev_month"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="&lt;"
        android:textColor="#3D6CBA"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:text="12æœˆ"
        android:textColor="@color/FF16461b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/next_month"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="&gt;"
        android:textColor="#3D6CBA"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/distance_10"
            android:paddingLeft="@dimen/distance_20"
            android:paddingRight="@dimen/distance_20"
            android:text="2023"
            android:textSize="@dimen/txtsize_24"
            android:textColor="@color/white"
            android:background="@drawable/year_shape"/>

    </LinearLayout>

</LinearLayout>

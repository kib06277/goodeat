<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/FFe5d6c4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/page_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/login_shape"
        android:layout_marginTop="@dimen/distance_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/distance_5"
                android:text="@string/eattime"
                android:textColor="@color/FF16461b"
                android:textSize="@dimen/txtsize_18"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/distance_5"
                android:padding="@dimen/distance_5"
                android:background="@color/FFe2e7e6">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_5"
                    android:text="2023/12/15"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_5"
                    android:text="07:00 PM"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/distance_20"
                android:layout_marginLeft="@dimen/distance_40"
                android:layout_marginRight="@dimen/distance_40"
                android:background="@drawable/keyin_shape"
                android:textSize="@dimen/txtsize_18"
                android:text="@string/foodimg"
                android:minLines="6"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/img_groun1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

                <TextView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_5"
                    android:layout_marginBottom="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

                <TextView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_groun5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

                <TextView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_5"
                    android:layout_marginBottom="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

                <TextView
                    android:id="@+id/img6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:textSize="@dimen/txtsize_18"
                    android:text="@string/foodimg"/>

            </LinearLayout>

            <TextView
                android:id="@+id/uploadimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/distance_5"
                android:text="@string/uploadimg"
                android:textColor="@color/FF16461b"
                android:textSize="@dimen/txtsize_18"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/foodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/foodname"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/foodname_keyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:paddingLeft="@dimen/distance_5"
                    android:paddingRight="@dimen/distance_5"
                    android:textSize="@dimen/txtsize_18"
                    android:inputType="text"
                    android:minEms="6"/>

                <TextView
                    android:id="@+id/portionsize_eatinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:text="@string/portionsize_eatinfo"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/portionsize_eatinfo_ketin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/keyin_shape"
                    android:gravity="center"
                    android:text="@string/allkindsportionsize"
                    android:textSize="@dimen/txtsize_18" />

                <TextView
                    android:id="@+id/other_eat_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_32"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/distance_5"
                android:padding="@dimen/distance_5">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/FFd8d9d9"
                    android:layout_marginTop="@dimen/distance_5"/>

                <TextView
                    android:id="@+id/dietary_judgment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_5"
                    android:text="@string/dietary_judgment"
                    android:textColor="@color/FF16461b"
                    android:textSize="@dimen/txtsize_16"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@color/FFd8d9d9"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distance_5"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/state1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/distance_5"
                android:padding="@dimen/distance_5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/remaining_portion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/distance_5"
                    android:background="@drawable/text_shape"
                    android:padding="@dimen/distance_10"
                    android:text="@string/remaining_portion"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mainfood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/mainfood" />

                    <ImageView
                        android:id="@+id/meat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/meat" />

                    <ImageView
                        android:id="@+id/vegetables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/vegetables" />

                    <ImageView
                        android:id="@+id/fruit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/fruit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mainfood_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_10"
                        android:layout_weight="1"
                        android:background="@drawable/text_shape"
                        android:gravity="center"
                        android:text="@string/mainfood"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_16" />

                    <TextView
                        android:id="@+id/meat1_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_10"
                        android:layout_weight="1"
                        android:background="@drawable/text_shape"
                        android:gravity="center"
                        android:text="@string/meat1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_16" />

                    <TextView
                        android:id="@+id/vegetables_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_10"
                        android:layout_weight="1"
                        android:background="@drawable/text_shape"
                        android:gravity="center"
                        android:text="@string/vegetables"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_16" />

                    <TextView
                        android:id="@+id/fruit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_10"
                        android:layout_weight="1"
                        android:background="@drawable/text_shape"
                        android:gravity="center"
                        android:text="@string/fruit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_16" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/state2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/distance_5"
                android:padding="@dimen/distance_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/writemoisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        android:text="@string/writemoisture"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/writemoisture_keyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        android:background="@drawable/keyin_shape"
                        android:gravity="right"
                        android:paddingLeft="@dimen/distance_5"
                        android:paddingRight="@dimen/distance_5"
                        android:textSize="@dimen/txtsize_18"
                        android:inputType="text"
                        android:minEms="7"
                        android:hint="@string/ml"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/excretion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        android:text="@string/excretion"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/haveexcretion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_5"
                        android:layout_marginLeft="@dimen/distance_15"
                        android:text="@string/haveexcretion"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/haveexcretion_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        app:srcCompat="@mipmap/circle" />

                    <EditText
                        android:id="@+id/frequency_keyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        android:background="@drawable/keyin_shape"
                        android:gravity="right"
                        android:paddingLeft="@dimen/distance_5"
                        android:textSize="@dimen/txtsize_18"
                        android:inputType="number"
                        android:minEms="3"/>

                    <TextView
                        android:id="@+id/frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_5"
                        android:layout_marginLeft="@dimen/distance_5"
                        android:text="@string/frequency"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/noexcretion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_5"
                        android:layout_marginLeft="@dimen/distance_5"
                        android:text="@string/noexcretion"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/noexcretion_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_5"
                        app:srcCompat="@mipmap/circle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/other_eatnfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/distance_5"
                        android:text="@string/other_eatnfo"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/other_eatnfo_keyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/distance_5"
                        android:background="@drawable/keyin_shape"
                        android:gravity="center"
                        android:paddingLeft="@dimen/distance_5"
                        android:paddingRight="@dimen/distance_5"
                        android:textSize="@dimen/txtsize_18"
                        android:inputType="text"
                        android:minEms="7"/>

                    <TextView
                        android:id="@+id/diarrhea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/distance_5"
                        android:text="@string/diarrhea"
                        android:textColor="@color/FF16461b"
                        android:textSize="@dimen/txtsize_18"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/powerspeech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distance_5"
                android:text="@string/powerspeech"
                android:textColor="@color/FF16461b"
                android:textSize="@dimen/txtsize_18"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/powerspeech_keyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distance_5"
                android:background="@drawable/keyin_shape"
                android:gravity="right"
                android:paddingLeft="@dimen/distance_10"
                android:textSize="@dimen/txtsize_18"
                android:minLines="3"
                android:inputType="textMultiLine"/>

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_20"
                android:layout_marginLeft="@dimen/distance_35"
                android:layout_marginRight="@dimen/distance_35"
                android:text="@string/ok"
                android:textSize="@dimen/txtsize_20"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
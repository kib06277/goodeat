<?xml version="1.0" encoding="utf-8"?>
<!--指定形狀類型，默認為 rectangle -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--指定形狀的填充色-->
    <solid android:color="@color/FF16461b" />

    <!--設定內容區域離邊界的間距-->
    <padding
        android:bottom="@dimen/distance_10"
        android:left="@dimen/distance_10"
        android:right="@dimen/distance_10"
        android:top="@dimen/distance_10" />

    <!--設定圓角，只適用於 rectangle-->
    <corners android:radius="15dp" />

</shape>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/distance_10"
    android:background="@drawable/background_shape">

    <ImageView
        android:id="@+id/transparentlove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/transparentlove"
        android:layout_margin="@dimen/distance_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/menstruationlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menstruationlog"
        android:textSize="@dimen/txtsize_18"
        android:layout_margin="@dimen/distance_20"
        app:layout_constraintLeft_toRightOf="@+id/transparentlove"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/calendar"
        android:layout_margin="@dimen/distance_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transparentlove"/>

    <TextView
        android:id="@+id/diarylook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diarylook"
        android:textSize="@dimen/txtsize_18"
        android:layout_marginTop="@dimen/distance_30"
        android:layout_marginLeft="@dimen/distance_20"
        app:layout_constraintLeft_toRightOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/menstruationlog"/>


</androidx.constraintlayout.widget.ConstraintLayout>